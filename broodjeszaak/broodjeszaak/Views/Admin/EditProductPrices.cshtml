@model IEnumerable<broodjeszaak.Models.Product>

@{
    ViewData["Title"] = "Bewerk Productprijzen";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditProductPrices" method="post">
    @foreach (var product in Model)
    {
        <div>
            @Html.HiddenFor(m => product.ProductID)
            @Html.HiddenFor(m => product.Name)
            @Html.HiddenFor(m => product.ImagePath)
            <label>Prijs:</label>
            @Html.TextBoxFor(m => product.Price, new { type = "number", step = "0.01", @class = "form-control" })
        </div>
    }
    <button type="submit" class="btn btn-primary">Opslaan</button>
</form>